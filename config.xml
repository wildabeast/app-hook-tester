    <hook type="after_compile"            src="hooks/hook.js"/>
    <hook type="before_deploy"            src="hooks/hook.js"/>
    <hook type="before_build"             src="hooks/hook.js"/>
    <hook type="after_build"              src="hooks/hook.js"/>
    <hook type="before_emulate"           src="hooks/hook.js"/>
    <hook type="after_emulate"            src="hooks/hook.js"/>
