<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.mycompany.phonegaptest" version="1.0">

	<name>phonegap test</name>
	<description>phonegap test</description>
	

	<access origin="*" />
	
